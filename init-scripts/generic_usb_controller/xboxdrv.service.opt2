[Unit]
Description=Xboxdrv service file. Calls legacy Upstart / SysV script instead of acting as a full systemd native service file.

[Service]
ExecStart=/usr/lib/systemd/scripts/xboxdrv start
ExecStart=/usr/lib/systemd/scripts/xboxdrv stop
ExecStart=/usr/lib/systemd/scripts/xboxdrv restart

# ==INFO==
# sudo systemctl daemon-reload
# sudo systemctl restart xboxdrv

[Install]
WantedBy=multi-user.target
