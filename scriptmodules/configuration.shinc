	# Get exit status
	# 0 means user hit [yes] button.
	# 1 means user hit [no] button.
	# 255 means user hit [Esc] key.
	response=$?
	case $response in
	   0) 
	   #dialog --infobox "Continuing..." 3 17
	   #continue on below function
	   ;;

	   1) 
	   dialog --infobox "Exiting..."  3 15
	   sleep 2s
	   set_menu
	   ;;

	   255)
	   dialog --infobox "Exiting..." 3 15
	   sleep 2s
